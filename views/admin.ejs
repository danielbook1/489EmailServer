<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="basics.css">
    <link rel="stylesheet" href="navBar.css">
    <link rel="stylesheet" href="admin.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>CMail - Admin</title>
</head>
<body class="background">
  <nav class="navbar navbar-expand-sm navbar-light">  <!-- Navbar -->
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="images\Logo.png" class="navbarLogo" alt="Home Button">
        </a>
    </div>
    <div class="container-fluid">
        <div class="collapse navbar-collapse justify-content-end">  <!-- Right Navbar-->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <!-- <a class="nav-link" href="/logout">Logout</a> -->
                    <button type="button" class="navLogout" id="logout">Logout</button>
                </li>
            </ul>
        </div>  <!-- Right Navbar End-->
      </div>
  </nav>  <!-- Navbar End -->
  <div class="container-fluid">
    <div class="d-flex justify-content-evenly">
      <div class="col-sm-5">
          <div class="container contentBackground">  <!-- Left Side -->
            <div class="row">
              <div class="col-sm-12 centerText">
                <h2>Users</h2>
              </div>
            </div>
            <div class="row">
              <table class="customTable">
                <tr>
                  <th class="tableHeader">Username</th>
                  <th class="tableHeader">Password</th>
                  <th class="tableHeader">Admin</th>
                  <tbody>
                    <% Users.forEach(function(Users) {  %>
                      <tr>
                        <td><%= Users.username %></td>
                        <td><%= Users.password %></td>
                        <td><%= Users.admin %></td>
                      </tr>
                      <% })%>
                  </tbody>
                </tr>
              </table>
            </div>
          </div>
      </div>
      <div class="col-sm-6">
          <div class="container contentBackground"> <!--Right Side-->
            <div class="row">
              <div class="col-sm-12 centerText">
                <h2>Promote User to Admin</h2>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <form class = "adminForm" id = "promoteUser">
                  <div class="d-flex justify-content-evenly">
                    <div class="col-sm-6">
                      <label for = "username">Username:</label> <br>
                      <input class = "Input" type = "text" id = "username"> <br><br>
                    </div>
                    <div class="col-sm-6">
                      <label for="password">Password:</label> <br>
                      <input class = "Input" type="password" id = "password"><br><br>
                    </div>
                  </div>
                  
                  <button type="submit" form = "promoteUser">
                      Promote User
                  </button>
              </form>
              </div>
            </div>
            <br><br>
            <div class="row">
              <div class="col-sm-12 centerText">
                <h2>Delete User</h2>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <form class = "adminForm" id = "deleteUser">
                  <div class="d-flex justify-content-evenly">
                  <div class="col-sm-6">
                    <label for = "username2">Username:</label> <br>
                    <input class = "Input" type = "text" id = "username2"> <br><br>
                  </div>
                  <div class="col-sm-6">
                    <label for="password2">Password:</label> <br>
                    <input class = "Input" type="password" id = "password2"><br><br>
                  </div>
                  </div>
                  <button type="submit" form = "deleteUser">
                      Remove User
                  </button>
                </form>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
  <script src="admin.js"></script>
</body>
</html>