<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="basics.css">
    <title>CMail - Admin</title>
</head>
<body style="width: 100%; height: 100%; background: linear-gradient(to top right, #ffff99 0%, #99ccff 100%);">
        <div class = "row">
            <span>
                <div class = "column2">
                    <p class = "Users">
                        <a class = "logo">Users</a>
                    </p>
                    <br>
                    <table style = "margin-left: 10%;">
                        <thead>
                          <tr>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Admin</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% Users.forEach(function(Users) {  %>
                            <tr>
                              <td><%= Users.username %></td>
                              <td><%= Users.password %></td>
                              <td><%= Users.admin %></td>
                            </tr>
                            <% })%>
                        </tbody>
                      </table>
                </div>
                <div class = "column3">
                    <p class = "Promote">
                        <a class = "logo">Promote User to Admin</a>
                    </p>
                    

                    <form class = "adminForm" id = "promoteUser">
                        <label for = "username">Username:</label> <br>
                        <input class = "Input" type = "text" id = "username"> <br><br>
                        <label for="password">Password:</label> <br>
                        <input class = "Input" type="password" id = "password"><br><br>
                        <button type="submit" form = "promoteUser" style="width: 38%; height: 7%; margin-left: 0%;">
                            Promote User
                        </button>
                    </form>

                    <br>
                    <p class = "Promote">
                        <a class = "logo">Delete User</a>
                    </p>
                    
                    <form class = "adminForm" id = "deleteUser">
                        <label for = "username2">Username:</label> <br>
                        <input class = "Input" type = "text" id = "username2"> <br><br>
                        <label for="password2">Password:</label> <br>
                        <input class = "Input" type="password" id = "password2"><br><br>
                        <button type="submit" form = "deleteUser" style="width: 38%; height: 7%; margin-left: 0%;">
                            Remove User
                        </button>
                    </form>
                    
                    <br><br>
                    <form class = "adminForm" id = "logOut">
                        <button type="submit" form = "logOut" style="width: 38%; height: 7%; margin-left: 0%;">
                            Log Out
                        </button>
                    </form>
                    
                </div>
            </span>
        </div>
        <script src="admin.js"></script>
</body>
</html>